mixin articles(title, articles, max=5)
    section.articles
        .subheading= title
        ul
            for article in articles[:max]
                li
                    .article-icon
                        img(src='/dev/source.png')
                    .article-info
                        .article-title.title
                            a(href=article.ext_url)= article.title
                        .meta
                            .meta-tags= article.source.name
                            .meta-time= article.updated_at|natural_datetime
        if articles|count > max
            .more {{ articles|count - max }} more articles
