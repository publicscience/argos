mixin articles(title, articles)
    section.articles
        .subheading= title
        ul
            for article in articles[:5]
                li
                    .article-icon
                        img(src='/dev/source.png')
                    .article-info
                        .article-title.title
                            a(href=article.ext_url)= article.title
                        .meta
                            .meta-tags= article.source.name
                            .meta-time= article.updated_at|natural_datetime
        if articles|count > 5
            .articles-more {{ articles|count - 5 }} more articles
